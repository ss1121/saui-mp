/**
 * 注意 +prefix-classes 不能为数字开头，如果颜色以数字开头的话 ，统一在前面加个字母 c 如： .c227ce1
 * @type {[type]}
 */
ss-btnFunc($border-radius = 3px, $bgc = #ff7e11, $bc = #ff7e11, $color = fff, $min-width = 100rpx, $hover-bg = #ff7e11)
  border-radius: $border-radius
  border: 1px solid transparent
  background-color: $bgc
  border-color: $bc
  color: $color
  display: block
  min-width: $min-width
  vertical-align: middle
  white-space: nowrap
  text-decoration: none
  text-align: center
  {btn-default}
  &:active
    background: fade-out($hover-bg, .15)
    border-color: fade-out($bc, .15)
    color: fade-out($color, .15)
  &.small
    {btn-sm}
  &.larger
    {btn-lg}
  &.disabled
    background: fade-out($bgc, .25)
    border-color: fade-out($bc, .25)
    color: fade-out($color, .25)
  &.bg-full
    &:active
      background-color: $bc
      color: #fff



 
