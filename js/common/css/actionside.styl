$modalPd-tb = 30rpx
$modalPd-lr = 30rpx
$modalBarHei = 60vh
$modalBarWid = 60vw

//遮盖层
.actionMask
  position fixed
  top: 0;
  left: 0
  opacity 0
  width 100vw
  height 100vh
  background-color fade-out(#000,  0.5)
  z-index -1
  &.show
    animation: fadeIn ease .3s forwards;
    z-index: 1

.as-common
  background-color #FAFAFA
  box-shadow: 0 5px 10px rgba(0,0,0,0.1);
  position fixed
  z-index: 2
//上下弹 公用
.as-common-tb
  width calc(100% - 60rpx)    //60rpx = $modalPd-lr * 2
  max-height calc(100% - 60rpx)     //60rpx = $modalPd-tb * 2
  padding $modalPd-tb $modalPd-lr
  left: 0
  &.bar
    max-height: $modalBarHei  
  &.full
    height: calc(100% - 60rpx)
//左右弹 公用
.as-common-lr
  max-width calc(100% - 60rpx)    //60rpx = $modalPd-lr * 2
  height calc(100% - 60rpx)     //60rpx = $modalPd-tb * 2
  padding $modalPd-tb $modalPd-lr
  top: 0
  &.bar
    max-width $modalBarWid
  &.full
    width: calc(100% - 60rpx)
    


.actionSide
  position: relative

.actionSide-right
  @extends .as-common
  @extends .as-common-lr
  right: 0
  &.moveit
    animation: slideRight ease .3s forwards;
  &.menus-bar
    max-width $modalBarWid
    z-index: 2

.actionSide-left
  @extends .as-common
  @extends .as-common-lr
  left: 0
  &.moveit
    animation: slideLeft ease .3s forwards;

.actionSide-bot
  @extends .as-common
  @extends .as-common-tb
  bottom 0
  &.moveit
    animation: slideUp ease .3s forwards;

.actionSide-top
  @extends .as-common
  @extends .as-common-tb
  top 0
  &.moveit
    animation: slideDown ease .3s forwards;

.closeIt
  position absolute
  font-size 28rpx
  top 10rpx
  right: 10rpx
  color: #C1CDCD