.flex-row
  ss-display-flex(row nowrap, flex-start)
.flex-row-wrap
  ss-display-flex(row wrap, flex-start)
.flex-row-center
  ss-display-flex(row nowrap, flex-start, center, center)
.flex-row-center-center
  ss-display-flex(row nowrap, center, center, center)

.flex-row-between-center
  ss-display-flex(row nowrap, space-between, center, center)
.flex-row-wrap-between-center
  ss-display-flex(row wrap, space-between, center, center)

.flex-column
  ss-display-flex(column, flex-start)
.flex-column-end
  ss-display-flex(column, flex-end)
.flex-column-start-center
  ss-display-flex(column, flex-start, center)
.flex-column-between
  ss-display-flex(column, space-between)
.flex-column-between-center
  ss-display-flex(column, space-between, center)

.hlist-flex
  .hlist
    @extends .flex-row-wrap
    margin-left: -1%
    margin-top: -1%
    >.item
      margin-left: 1%
      margin-top: 1%

.flex-betwwen-center-htitles
  >.htitles
    @extends .flex-row-between-center
.flex-betwwen-center-hkv
  >.hkv
    @extends .flex-row-between-center