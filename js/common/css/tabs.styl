// tab 组件
.tab-container 
  background-color: #fff
  ss-display-flex(column-reverse, flex-start)
  .menu-box 
    ss-display-flex(row nowrap, flex-start, flex-end)
    background: #f3f3f3
    color: #333
    font-size: 10px
    height: 100rpx
    .menu-item
      flex: 1;
      text-align: center;
      margin-bottom: 8rpx
      &.active
        color: #4caf50
    .item-icon
      ss-display-flex(column, center)
      &:before
        font-size: 20px