ssfunc-ss-title()
  .ss-title
    color: #666666
    display: block
    font-size: 14px
    padding: $dispaly-padding

ssfunc-ss-title-flex-between()
  .ss-title-flex-between
    @extends .ss-title
    @extends .flex-row-between-center


//tree 列表 形式一
$tl-padidng = $plr-default
$tl-item-mb = 20rpx
$tl-item-bg = #fff
$tl-item-br = $list-br

ssfunc-ss-tree-list()
  .ss-tree-list
    padding: $tl-padidng
    >.item
      margin-bottom: $tl-item-mb
      background: $tl-item-bg 
      border-radius: $tl-item-br