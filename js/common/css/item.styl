.item-normal-row
  ss-display-flex(row nowrap, flex-start)
  &:last-child
    border-bottom: none
  .hbody
    border-bottom: 1px solid #e3e3e3
    margin-left: 20rpx
    padding: 20rpx 0
    flex: 1


//选中后 后边出现打勾
.item-check
  line-height: $height
  color: $color
  padding: $padding
  &.nopd
    padding: 0
  &.active
    ss-display-flex(row nowrap, space-between, cener)
    color: $color-primary
    &:after
      content: '\e660'