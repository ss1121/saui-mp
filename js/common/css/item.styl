$height = 88rpx
$color = #333
$padding = 0 20rpx


.hkv-between
  height: 100%
  >ui-item
    >.hkv
      ss-display-flex(column, space-between)
      height: 100%
.hkv-around
  height: 100%
  >ui-item
    >.hkv
      ss-display-flex(column, space-around)
      height: 100%

