slider
  margin: 0

.ss-focus
  &:focus, &:active
    background: #eee

/*
  next-p100 主要是生成结构时，会产出ui-item 或ui-list等标签去包住具体的结构
    但是不是所有的都需要去添加 -。-！！！
*/
.next-p100  
  >ui-item     //list/normal 暂定
    height: 100%
.next-p100-first 
  >ui-item
    &:first-child
      height: 100%

.flex-1
  flex: 1

.ss-center
  text-align: center

.pages-wrap-default
  height: 100vh
  padding: $padding-default

.block
  display block

//
.boxer
  background: $color-bg
  color: $color-default
  font-size: $size-primary
  height: 100vh
  width: 100%
  overflow: hidden
  &.boxer-hei-auto
    height: auto
  &.boxer-hei-auto
    height: auto

//小程序用到@extens 注意： a:无法引用其它样式表的，b：要不然得放在这个样式表：如下

.title-sm-grey
  color: $color-grey
  font-size: 24rpx

.title-primary-grey
  color: $color-grey
  font-size: $size-primary

.title-lg-active
  color: $color-active
  font-size: $size-lg

.bg-title
  border-bottom: 2rpx solid $color-border
  background: $color-bg
  color: $color-grey
  line-height: $line-height-title
  padding: $plr-default

.bg-display
  border-radius: $br-sm
  box-sizing: border-box;
  padding: $padding-default
  height: 160rpx



//带背景色标题
.bg-title-f3f3f3
  >.htitles
    height: 100%
  background: #f3f3f3
  height: 70rpx
  padding: 0 20rpx
  >.htitles
    ss-display-flex(row nowrap, space-between, center, center)

.bg-title-body-f3f3f3
  ss-display-flex(row nowrap, space-between, center, center)
  background: #f3f3f3
  height: 70rpx
  padding: 0 20rpx
  .htitles
    ss-display-flex(row nowrap, flex-start, center)
.item-titlex
  color: #333333
  font-size: 16px
.item-descx
  color: #999
  font-size: 14px

