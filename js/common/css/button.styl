  
/**
 * 直接写类名就可以执行对应的样式 如: .btn-primary
 * @type {[type]}
 */
+ prefix-classes('btn-')
  .primary
    ss-btnFunc( $bgc: $btn-bgc-primary, $bc: $btn-bc-primary, $color: $btn-c-primary, $hover-bg: $btn-bgc-primary)
  .work
    ss-btnFunc( $bgc: $btn-bgc-work, $bc: $btn-bc-work, $color: $btn-c-work, $hover-bg: $btn-bgc-work)
  .fff-primary
    ss-btnFunc( $bgc: $btn-c-primary, $bc: $btn-bgc-primary, $color: $btn-bgc-primary, $hover-bg: $btn-c-primary)