        </block>
        <text class="input-item-radio-after {{tmp.isChecked(input, val) ? 'checked' : ''}}"/>
        <text wx:if="{{tmp.validrcp(input, 'descs', vid)}}">{{input.descs[vid]}}</text>
      </label>
    </block>
  </radio-group>
</template>

