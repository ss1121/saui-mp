.wid250
  width: 250rpx


display-flex($flex-row = row nowrap, $justify-content = flex-start, $align-items = false, $align-content = false)
  display: flex
  flex-flow: $flex-row
  justify-content: $justify-content;
  if ($align-items != false)
    align-items: $align-items
  if ($align-content != false)
    align-content: $align-content

.block
  display block

.boxer
  width 100vw
  height: 100vh
  overflow-x hidden
  position relative
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding 15rpx
  .ul
    // display: flex
    // flex-direction: column
    padding 0 10px
  .item-normal
    width 100%
    font-size 14px
    padding 10px 0
    border-bottom 1px solid #d3d3d3
    &:last-child
      border-bottom none
    .htitles
      display-flex(row nowrap, space-between, center, center)
      width 100%
      .item-icon
        font-size 14px
        &:after
          content: '\e618'

.list-normal
  >.li
    font-size 14px
    padding 6px 0
    border-bottom 1px solid #d3d3d3
    &:last-child
      border-bottom none

.item-pic
  display-flex(row nowrap, flex-start)
  position relative
  .ul
    display-flex(column, space-between)
    padding 0
    flex: 1
  .hbody
    &, ../ .hfooter
      display-flex(row nowrap, space-between, center, center)
  .item-title
    font-size 14px
    color: #333
  .item-desc
    font-size 12px
    color: #999
  .item-time
    font-size 10px
    color: #999
  .item-icon
    font-size 10px
    color: #999

.icon-dot
  background: red
  background:#f00;
  font-size:10px;
  color:#fff;
  display:block;
  position:absolute;
  top: 0
  // left:45px;
  right: 77vw
  min-width 6px
  min-height @min-width
  border-radius @min-width
  display-flex(row nowrap, center, center, center)

.icon-dot-small
  width 14px
  height @width
  border-radius @width

.icon-dot-more
  border-radius: 10px
  padding: 0 4px;

.item-pic-45
  width 45px
  height @width
  border-radius 4px
