.boxer
  width 100vw
  height: auto
  position relative
  overflow hidden
  .stickyBottomBar
    position fixed
    left 30rpx
    bottom 50rpx
    width 96vw
    .recodeButton
      font-size 22px
      image
        margin 0 auto
  .ul
    width auto
    height auto
    margin-bottom 60px
  .item-normal
    width auto
    height 180px
    overflow hidden
    font-size 14px
    padding 10px
    border-radius 5px
    margin-bottom 20rpx
    .htitles
      display-flex(row nowrap, space-between, center, center)
      width 100%
      .item-icon
        font-size 14px
        &:after
          content: '\e618'

