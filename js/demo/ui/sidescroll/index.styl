.d-swiper-li
  border-radius 10px
  color: #fff
  font-size 14px
  overflow hidden
  margin-top 15px
  margin 0 4px 0 8px
  box-shadow 0 0 20px rgba(136,136,136, .8)
.d-swiper-title
  height 88%
  padding 10px
  width 84%
  display: inline-block;
  &:first-child
