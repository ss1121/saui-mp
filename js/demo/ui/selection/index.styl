@import '../../../common/commonfunc'

$font-size = 28rpx
$color = #666
$activeColor = #227ce1
$height = 90rpx
$bgHeight = calc(100vh - 92rpx)   //90rpx + 2rpx(下边线)== $height


$arrowSize = 24rpx
$arrowColor = #999
$arrrowMl = 8rpx

.ss-scrore-list
  ss-display-flex(row nowrap, flex-start, center)
  background: #fff
  border-bottom: 2rpx solid #e5e5e5
  color: $color
  font-size: $font-size
  position: relative
  height: $height
  >ui-item
    >.item
      text-align: center
      &.active
        color: $activeColor
        .item-arrow
          &:after
            content: '\e617'
            color: $activeColor
  .item-arrow
    &:after
      content: '\e616'
      color: $arrowColor
      margin-left: $arrrowMl
      font-size: $arrowSize

.ss-scrore-list-pop
  position: absolute
  top: $height
  left 0
  width: 100%
  background: #fff
  box-shadow:0px -10px 12px 0px rgba(21,61,106,0.03);
  display: none
  height: $bgHeight
  background: fade-out(#000, .8)
  &.active
    display: block
  .tabs-column
    max-height: 70vh

.selection-body
  ss-display-flex(row nowrap, flex-start)
  height: calc(100% - 102rpx)
  >ui-list
    &:first-child
      flex: 1
  .selection-scroll
    >ui-item
      >.item
        width: 92%

.selectionMenus
  text-align: center
  color: $color-primary
  width: 44rpx
  line-height: @width
  margin: 0 3rpx
  >ui-item
    >.item
      margin-bottom: 6rpx
      &.active
        background $color-primary
        border-radius 100%
        color: #fff
        width: @width
        height: @width

