// vendors = official
@import "../../common/commonfunc"
@import "../../common/css/tabs"
@import "../../common/css/grid"


$page-margin= 30rpx

$font-size = 28rpx
$color = #000
$activeColor = #227ce1
$height = 70rpx
$bgHeight = calc(100vh - 42rpx)   //90rpx + 2rpx(下边线)== $height


$arrowSize = 16rpx
$arrowColor = #999
$arrrowMl = 8rpx

.tabs-column-uilist-btn
  >ui-list
    ssfunc-tabs-column-com(true)

ss-search-big()
  ss-display-flex(row nowrap, flex-start)
  font-size: 24rpx
  background: #f5f5f5;
  border-radius: 40rpx;
  box-sizing: border-box
  height: 80rpx;
  padding: 18rpx 0 
  color: #000
  >.item-li
    flex: auto
    border-right: 1rpx solid #e5e5e5
    padding: 0 20rpx
    ss-display-flex(row nowrap, space-between, center)
    &:last-child
      border-right: none
    &.item-address    
      box-sizing: border-box
      flex: initial
      width: 25%
      text
        display: block
        flex: 1
        text-align: center
    &.item-time
      font-size: 20rpx
      text
        white-space: nowrap
    &.item-search
      color: #999

view 
  font-size: inherit

.item-icon-arrow
  &:after
    content: '\e794'
    color: $arrowColor
    margin-left: $arrrowMl
    font-size: $arrowSize
  &.active
    &:after
      content: '\e6b0'

.item-icon-search
  &:before
    font-size: 22rpx
    content: '\e78e'
    margin-right: 10rpx

.text-line-through
  text-decoration-line: line-through

.boxer
  background: #fff

.p-search
  margin: 10rpx 0 10rpx $page-margin
  width: 90%
  ss-search-big()
  .right
    margin-left: 20rpx

