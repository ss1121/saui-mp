//tabs 基础   isScroll 需要scroll的时候 flex失效
ss-tabs($Menu-bg = #fff, $Menu-color = #333, $Menu-size = 28rpx, $Menu-hei = 100rpx, $Menu-active = #4b9afc, $isScrollRow = false)
  if ($isScrollRow == false)
    ss-display-flex(row wrap, flex-start)
  else 
    line-height: $Menu-hei 
  background: $Menu-bg
  color: $Menu-color
  font-size: $Menu-size
  height: $Menu-hei 
  position: relative
  z-index: 1
  .item
    text-align: center;
    position: relative
    &.active
      color: $Menu-active
    &.hasCheck
      .item-title
        position: relative
        display: initial
        &:after
          content: ''
          border-radius: 10rpx
          width: 10rpx
          height: @width 
          background: #4b9afc
          position: absolute
          top: -4rpx
          right: -8rpx

//tabs 下线画
ss-border-ani($lineHei = 4rpx, $lineBot = -2rpx, $lineColor = #4caf50, $isScroll = false)
  if ($isScroll == false)
    ss-display-flex(column, center, center)
  else
    display: inline-block
  &:after
    content: ''
    left: -100%
    right: -100%
    transition: left .2s, right .2s
    -webkit-transition: left .2s, right .2s
  &.active
    position: relative
    &:after
      height: $lineHei
      width: 100%
      position: absolute
      bottom: $lineBot
      left: 0
      right: initial
      background: $lineColor
  &.f-right
    &:after
      right: 0
      left: initial