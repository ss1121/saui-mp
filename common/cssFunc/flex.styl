ss-display-flex($flex-flow = row nowrap, $justify-content = flex-start, $align-items = false, $align-content = false)
  display: flex
  flex-flow: $flex-flow
  justify-content: $justify-content
  if ( $align-items != false)
    align-items: $align-items
  if ( $align-content != false)
    align-content: $align-content



/*
  扩展
*/
ss-row-list($marginLeft= 6px, $justify-content = flex-start, $align-items = initial, $marginBottom = 0)
  ss-display-flex(row wrap,$justify-content,$align-items,center)
  margin-left: - $marginLeft
  >li,>div
    margin-left: $marginLeft
    margin-bottom: $marginBottom

ss-flex-row( $justify-content = flex-start, $align-items = initial, $align-content = initial)
  ss-display-flex(row nowrap, $justify-content, $align-items, $align-content)

ss-flex-column( $justify-content = flex-start, $align-items = initial, $align-content = initial)
  ss-display-flex(column nowrap, $justify-content, $align-items, $align-content)



ss-row-list-x($typex = 1, $isBorder = false, $borderHeight = 12px, $justify-content = flex-start, $align-items = center, $ml = 10rpx, $pl= 10rpx)
  ss-display-flex(row nowrap, $justify-content, $align-items, center)
  >ui-item:not(:first-of-type)
    if ($isBorder != false)
      &:before
        content: ''
        background: $isBorder
        width: 2rpx
        height: $borderHeight
        position: absolute
        left: -1px
        top: ((50% - @height)/2)
        
  if ($typex == 1)
    overflow: hidden
    margin-left: -($ml + $pl)
    >ui-item
      margin-left: $ml
      padding-left: $pl
      position: relative
  if ($typex == 2)
    >ui-item
      margin-left: $ml
      padding-left: $pl
      position: relative
      &:first-child
        margin-left: 0
        padding-left: 0