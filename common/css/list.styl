ssfunc-list-bb-normal()
  .list-bb-normal
    >.item
      border-bottom: 1rpx solid $color-border
      padding: $padding-default
      &:last-child
        border: none

ssfunc-list-bb()
  .list-bb
    >ui-item
      .item-border
        border-bottom: 1rpx solid $color-border
        padding: $padding-default
      &:last-child
        .item-border
          border: none

ssfunc-list-mt-30-r()
  .list-mt-30-r
    margin-top: -30rpx
    >.item-li
      margin-top: 30rpx

/*
  中间带边线  .line-li-10 (10指的是间距)
*/
ssfunc-line-li-20()
  .line-li-20
    ss-row-list-x(2, $color-border)
ssfunc-line-li2-20()
  .line-li2-20
    ss-row-list-x(1, $color-border)

//上下结构    图片 
ssfunc-list-pic-column()
  .list-pic-column
    &.pic-2
      ss-display-flex(row wrap, space-between, flex-start, flex-start)
      >ui-item
        width: 47.9%
    .item-header
      background: #f5f5f5;
      position: relative;
    .item-header-pic
      width: 100%
      height: 330rpx
      image 
        width: 100%
        height: auto
    .item-body
      width: 100%
      padding: 16rpx 0 38rpx 0


//nav 底部导航
ssfunc-list-nav()
  .list-nav
    background: #fff
    border-top: 1px solid $color-border
    position: fixed
    bottom: 0
    left 0
    width: 100%
    height: $height
    ss-display-flex(row nowrap, flex-start, center)
    color: $color
    .item
      flex: 1
      text-align: center
      &.active
        color: $color-primary
    .item-icon
      font-size: 38rpx
    .item-title
      font-size: 24rpx

//两列  默认间距是3%
ssfunc-list-lines-2()
  .list-lines-2
    @extends .flex-row-wrap
    margin-top: -3%
    margin-left: @margin-top
    >ui-item
      >.item
        width: 47%
        margin-top: 3%
        margin-left: @margin-top
        box-sizing: border-box
