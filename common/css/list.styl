$height = 88rpx
$color = #333
/*
 gird
*/
ssfunc-list-grid-3()
  .list-grid-3
    ss-display-flex(row wrap, flex-start)
    margin-left: -3%
    margin-top: -3%
    >ui-item
      >.item
        width: calc(91% / 3 )
        margin-left: 3%
        margin-top: 3%
        .htitle
          width: calc(100% - 4rpx)

