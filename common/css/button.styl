  
/**
 * 直接写类名就可以执行对应的样式 如: .btn-primary
 * @type {[type]}
 */
+ prefix-classes('btn-')
  .default
    ss-btnFunc( $btn-radius, $bgc: $btn-bgc-default, $bc: $btn-bc-default, $color: $btn-c-default, $hover-bg: $btn-bgc-default, $border-radius-small: $btn-radius-s)
    border: none
  .primary
    ss-btnFunc( $btn-radius, $bgc: $btn-bgc-primary, $bc: $btn-bc-primary, $color: $btn-c-primary, $hover-bg: $btn-bgc-primary, $border-radius-small: $btn-radius-s)
    border: none
  .work
    ss-btnFunc( $btn-radius, $bgc: $btn-bgc-work, $bc: $btn-bc-work, $color: $btn-c-work, $hover-bg: $btn-bgc-work, $border-radius-small: $btn-radius-s)
    border: none
  .fff-primary
    ss-btnFunc( $btn-radius, $bgc: $btn-c-primary, $bc: $btn-bgc-primary, $color: $btn-bgc-primary, $hover-bg: $btn-c-primary, $disable-bg: $btn-c-primary, $disable-bc: $btn-dislable-color, $disable-c: $btn-dislable-color )
  .icon-normal
    ss-btnFunc( $btn-radius, $bgc: $btn-bgc-special, $bc: $btn-bc-special, $color: $btn-c-special, $hover-bg: $btn-bgc-special, $disable-bg: $btn-dislable-color, $disable-bc: $btn-dislable-color, $disable-c: #fff, $icon: '\e675')
  .fff-grey
    ss-btnFunc( $btn-radius, $bgc: $btn-bgc-grey, $bc: $btn-bc-grey, $color: $btn-c-grey, $hover-bg: $btn-bgc-grey, $border-radius-small: $btn-radius-s)
  .text
    background: transparent
    padding: 0
    margin: 0
    &:after
      position: initial
      border: none
      width: auto
      height: auto
    &:active
      background: transparent
      border: none 
      color: inherit   