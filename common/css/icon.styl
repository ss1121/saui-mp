ssfunc-icon-dot-small-before-tr()
  .icon-dot-small-before-tr
    position: relative
    &:before
      content: ''
      @extends .icon-dot-small
      position: absolute;
      right: -20rpx;


ssfunc-icon-dot-more()
  .icon-dot-more
    @extends .icon-dot
    padding: 0 4px;
ssfunc-icon-arrows-r-absolute()
  .icon-arrows-r-absolute
    @extends .icon-arrows-r
    ss-display-flex(row nowrap, flex-start, center)
    height: 100%
    &:after
      font-size: 26rpx
      width: 20rpx
      margin-left: 20rpx
      display: block
      position: absolute
      right: 0

ssfunc-icon-arrow-right-circle()
  .icon-arrow-right-circle
    width: 100rpx
    height: @width
    border-radius: @width
    border: 3rpx solid $color-border-3
    color: $color-border-3
    text-align: center
    line-height: @width
    font-size: 26px
    &:before
      content: '\e64a'
    &.small
      width: 60rpx
      height: @width
      border-radius: @width
      border-color: #ccc
      color: #ccc
      line-height: @width
      font-size: 16px
    &.item-color-cc
      border-color: $color-border-4 
      color: $color-border-4 
    &.icon-left
      &:before
        display: block
        transform: rotate(180deg)
  
ssfunc-icon-arror-top-solid()
  .icon-arror-top-solid
    &:before
      content: '\e6b0'
      color: #d4d4d4
      font-size: 24rpx
    &.absolute
      position: absolute
      top: -26rpx
      left: 0 
      width: calc(100% / 9);
      border: 1px solid transparent;
      box-sizing: border-box;
      text-align: center

//小圆点
.icon-dot
  background: red
  background:#f00;
  color:#fff;
  font-size: 10px;
  width 20rpx
  height @width
  border-radius @width
  ss-display-flex(row nowrap, center, center, center)

.icon-dot-small
  @extends .icon-dot
  width 16rpx
  height @width
  border-radius @width

//iconfont
.icon-arrows-r
  &:after
    content: '\e618'
    color: $arrow-default-color

.icon-arrows-t
  &:before
    content: '\e617'
.icon-arrows-b
  &:before
    content: '\e616'

.icon-silence
  &:before
    content: '\e74d'

.icon-eye
  &:before
    content: '\e65d'
.icon-close-eye
  &:before
    content: '\e65e'
.icon-right
  &:before
    content: '\e660'