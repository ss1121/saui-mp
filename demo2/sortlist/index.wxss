.container {
  display: flex;
  margin-top: 0;
  padding: 0;
  align-items: center;
  justify-content: center;
  position: relative;
}

.tab-boxer {
  width: 100vw;
  height: 100vh;
  display: flex;
  box-sizing: border-box;
  position: relative;
}

.sortlist-container {
  width: 100%;
  box-sizing: border-box;
}

.sortlist-container .itemroot > .htitle{
  position: sticky;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  height: 22px;
  background-color: #efefef; 
  padding: 3px 3px 3px 10px;
}
.sortlist-item {
  min-height: 30px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.ul .sortlist-item{
  height: 70px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: row;
}
.ul .sortlist-item:active{
  background-color: #e9e9e9;
}
.ul .sortlist-item image{
  border: 1px solid #eee;
  border-radius: 5px;
  padding: 3px;
  width:43px;
  height:43px;
  margin-left: 10px;
}
.ul .sortlist-item text{
  flex: 1;
  display: flex;
  align-items: center;
  height: 100%;
  margin-left: 15px;
  border-bottom: 1px solid #f5f5f5;
}
.ul .sortlist-item:last-child {
  margin-bottom: 10px;
}

.touchbar-cat {
  position: fixed;
  right: 5px;
  width: 20px;
  height: 100vh;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  margin-top: -10px;
}

.touchbar-cat .hlist{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  font-size: 10px;
}

