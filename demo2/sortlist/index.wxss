.touchbar-cat .touchbar-cat-tips {
  position: fixed;
  width: 100px;
  height: 100px;
  background-color: red;
  display: none;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  font-size: 30px;
  font-weight: bold;
}

.touchbar-cat .touchbar-cat-tips.active {
  display: flex;
  justify-content: center;
  align-items: center;
}

.touchbar-cat .item{
  width: 20px;
  height: 20px;
  line-height: 20px;
  text-align: center;
}

.touchbar-cat .item.active {
  color: #fff;
  background-color: rgb(86,191,106);
  border-radius: 50%;
}


