/**index.wxss**/
.flex-box {
  margin-top: 30rpx;
  display: flex;
  width: 100%;
}
.flex-item-1 {
  flex: 1;
  background-color: #f00;
}
.flex-item-2 {
  flex: 3;
  background-color: #00f;
}
.demo-item {
  width: 100%;
  padding: 20rpx;
  font-size: 14px;
}
.demo-item .hbody .hkv {
  padding: 0;
  margin: 0;
}
.demo-item .hbody .hkv text {
  font-size: 25rpx;
  margin-right: 20rpx;
}
.demo-item view {
  margin-top: 30rpx;
}
.demo-item view.item {
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #f00;
}
.demo-item view.mykv {
  border: 1rpx solid #e3e3e3;
  padding: 10rpx;
}
.demo-item view.mykv .hbody {
  margin: 0;
}
.demo-item view.mykv text.htitle {
  font-size: 30rpx;
  font-weight: bold;
  display: block;
}
.demo-item view.ul {
  border: 1px solid #e3e3e3;
  overflow: hidden;
  position: relative;
  width: 260rpx;
  padding: 20rpx;
}
.demo-item view.ul .htitle {
  display: block;
}
.demo-item view.ul .hot {
  font-size: 12px;
  padding: 5px 20px;
  text-align: center;
  position: absolute;
  right: -20px;
  top: 26px;
  background-color: #f00;
  color: #fff;
  transform-origin: 100% 0;
  transform: rotate(45deg);
}
.wid250 {
  width: 250rpx;
}
.block {
  display: block;
}
.boxer {
  width: 100vw;
  min-height: 100vh;
  overflow-x: hidden;
  position: relative;
}
.list-normal >.li {
  font-size: 14px;
  padding: 6px 0;
  border-bottom: 1px solid #d3d3d3;
}
.list-normal >.li:last-child {
  border-bottom: none;
}
.item-pic {
  position: relative;
}
.item-pic .ul {
  padding: 0;
  flex: 1;
}
.item-pic .item-title {
  font-size: 14px;
  color: #333;
}
.item-pic .item-desc {
  font-size: 12px;
  color: #999;
}
.item-pic .item-time {
  font-size: 10px;
  color: #999;
}
.item-pic .item-icon {
  font-size: 10px;
  color: #999;
}
.h1,
.h2,
.h3,
.h4 {
  color: #111;
  font-weight: bold;
}
.h1 {
  font-size: 36px;
  line-height: 42px;
  margin-top: 36px;
}
.h2 {
  font-size: 24px;
  line-height: 30px;
  margin-top: 24px;
}
.h1,
.h2 {
  border-bottom: 1px solid #efeaea;
  padding-bottom: 10px;
}
.h3 {
  font-size: 21px;
  line-height: 26px;
  margin-top: 21px;
}
.h4 {
  font-size: 18px;
  line-height: 23px;
  margin-top: 18px;
}
.h5 {
  font-size: 14px;
  line-height: 17px;
}
.h6 {
  font-size: 12px;
  line-height: 15px;
}
.h1 {
  display: block;
}
.h1 .htitle {
  font-size: 36px;
}
.h2 {
  display: block;
}
.h2 .htitle {
  font-size: 24px;
}
.h3 {
  display: block;
}
.h3 .htitle {
  font-size: 21px;
}
.h4 {
  display: block;
}
.h4 .htitle {
  font-size: 18px;
}
.h5 {
  display: block;
}
.h5 .htitle {
  font-size: 14px;
}
.h6 {
  display: block;
}
.h6 .htitle {
  font-size: 12px;
}
.item-pic-45 {
  width: 45px;
  height: 45px;
  border-radius: 4px;
}
.mb10 {
  margin-bottom: 10px;
}
.mr10 {
  margin-right: 10px;
}
.hei45 {
  height: 45px;
}
.page {
  width: 100vw;
  height: 100vh;
  position: absolute;
  right: -100vw;
  top: 0;
  background-color: #f00;
  transition: all 0.2s linear;
}
.page.moveit {
  transform: translate3d(-100vw, 0, 0);
  box-shadow: 0 5px 10px rgba(0,0,0,0.1);
}
.button {
  width: 160rpx;
  height: 70rpx;
  background-color: #007bff;
  border-color: #007bff;
  border-radius: 5px;
  text-align: center;
  line-height: 70rpx;
  font-size: 30rpx;
  padding: 5rpx;
  color: #000;
}
.button.primary {
  background-color: #007bff;
  border-color: #007bff;
  color: #fff;
}
