<wxs src="../util.wxs" module="util" />
<wxs module="inner">
  function has(item, type){
    if (item.form) return item.form[type]
  }
  function mixprops(input, profile){
    if (typeof input == 'object') {
      input.profile = profile
    }
    return input
  }
  module.exports = { 
    has: has,
    mixprops: mixprops
  }
</wxs>
