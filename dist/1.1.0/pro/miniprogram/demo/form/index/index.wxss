/**index.wxss**/
.flex-box {
  margin-top: 30rpx;
  display: flex;
  width: 100%;
}
.flex-item-1 {
  flex: 1;
  background-color: #f00;
}
.flex-item-2 {
  flex: 3;
  background-color: #00f;
}
.demo-item {
  width: 100%;
  padding: 20rpx;
  font-size: 14px;
}
.demo-item .hbody .hkv {
  padding: 0;
  margin: 0;
}
.demo-item .hbody .hkv text {
  font-size: 25rpx;
  margin-right: 20rpx;
}
.demo-item view {
  margin-top: 30rpx;
}
.demo-item view.item {
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #f00;
}
.demo-item view.mykv {
  border: 1rpx solid #e3e3e3;
  padding: 10rpx;
}
.demo-item view.mykv .hbody {
  margin: 0;
}
.demo-item view.mykv text.htitle {
  font-size: 30rpx;
  font-weight: bold;
  display: block;
}
.demo-item view.ul {
  border: 1px solid #e3e3e3;
  overflow: hidden;
  position: relative;
  width: 260rpx;
  padding: 20rpx;
}
.demo-item view.ul .htitle {
  display: block;
}
.demo-item view.ul .hot {
  font-size: 12px;
  padding: 5px 20px;
  text-align: center;
  position: absolute;
  right: -20px;
  top: 26px;
  background-color: #f00;
  color: #fff;
  transform-origin: 100% 0;
  transform: rotate(45deg);
}
.wid250 {
  width: 250rpx;
}
.block {
  display: block;
}
.boxer {
  width: 100vw;
  height: 100vh;
  overflow-x: hidden;
  position: relative;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 15rpx;
}
.boxer .ul {
  padding: 0 10px;
}
.boxer .item-normal {
  width: 100%;
  font-size: 14px;
  padding: 10px 0;
  border-bottom: 1px solid #d3d3d3;
}
.boxer .item-normal:last-child {
  border-bottom: none;
}
.boxer .item-normal .htitles {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  align-content: center;
  width: 100%;
}
.boxer .item-normal .htitles .item-icon {
  font-size: 14px;
}
.boxer .item-normal .htitles .item-icon:after {
  content: '\e618';
}
.list-normal >.li {
  font-size: 14px;
  padding: 6px 0;
  border-bottom: 1px solid #d3d3d3;
}
.list-normal >.li:last-child {
  border-bottom: none;
}
.item-pic {
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  position: relative;
}
.item-pic .ul {
  display: flex;
  flex-flow: column;
  justify-content: space-between;
  padding: 0;
  flex: 1;
}
.item-pic .hbody,
.item-pic .hfooter {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  align-content: center;
}
.item-pic .item-title {
  font-size: 14px;
  color: #333;
}
.item-pic .item-desc {
  font-size: 12px;
  color: #999;
}
.item-pic .item-time {
  font-size: 10px;
  color: #999;
}
.item-pic .item-icon {
  font-size: 10px;
  color: #999;
}
.icon-dot {
  background: #f00;
  background: #f00;
  font-size: 10px;
  color: #fff;
  display: block;
  position: absolute;
  top: 0;
  right: 77vw;
  min-width: 6px;
  min-height: 6px;
  border-radius: 6px;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
  align-content: center;
}
.icon-dot-small {
  width: 14px;
  height: 14px;
  border-radius: 14px;
}
.icon-dot-more {
  border-radius: 10px;
  padding: 0 4px;
}
.item-pic-45 {
  width: 45px;
  height: 45px;
  border-radius: 4px;
}
.mb10 {
  margin-bottom: 10px;
}
.mr10 {
  margin-right: 10px;
}
.hei45 {
  height: 45px;
}
