.wid250
  width: 250rpx


display-flex($flex-row = row nowrap, $justify-content = flex-start, $align-items = false, $align-content = false)
  display: flex
  flex-flow: $flex-row
  justify-content: $justify-content;
  if ($align-items != false)
    align-items: $align-items
  if ($align-content != false)
    align-content: $align-content


.block
  display block

swiper
  height 100%

.stickyBottomBar
  position fixed
  left 30rpx
  bottom 50rpx
  width 96vw
  .recodeButton
    font-size 22px
    image
      margin 0 auto
      
.boxer
  width 100vw
  height: auto
  position relative
  overflow hidden
  .ul
    width auto
    height auto
    margin-bottom 60px
  .item-normal
    width auto
    height 180px
    overflow hidden
    font-size 14px
    padding 10px
    border-radius 5px
    margin-bottom 20rpx
    .htitles
      display-flex(row nowrap, space-between, center, center)
      width 100%
      .item-icon
        font-size 14px
        &:after
          content: '\e618'

